<h1>Let's Learn Ruby!</h1>

<div class="row">
    <div class="large-12 columns">
        <ul class="small-block-grid-3">
            {{#each model}}
                <li>
                    <div class="lessons action" {{action 'goToLesson' this}}>
                        <div class="panel">
                            <h4>Lesson {{lesson_number}}</h4>

                            <p>{{lesson_title}}</p>
                        </div>
                    </div>
                </li>
            {{/each}}
        </ul>
    </div>
</div>
